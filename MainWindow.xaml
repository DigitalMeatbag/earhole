<Window x:Class="earhole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:earhole"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Title="Audio Visualizer" Height="600" Width="800">
    <Grid>
        <skia:SKElement x:Name="SkiaView" />
        <TextBlock x:Name="StatusText" 
                   Text="no audio input detected" 
                   FontSize="48" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Opacity="1" />
        <Border x:Name="ModeMenu"
                Background="#DD000000"
                Padding="20"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Visualizer Modes"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,15"
                           HorizontalAlignment="Center" />
                <ListBox x:Name="ModeListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         FontSize="18"
                         MinWidth="300">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Padding" Value="10,5" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#33FFFFFF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>
